<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_local_notification"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_notification" />

    <Button
        android:id="@+id/button_local_notification_clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_notification_clear" />

    <Button
        android:id="@+id/button_local_notification_clearAll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_notification_clearAll" />

    <Button
        android:id="@+id/button_remote_notification_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/remote_notification_register" />

</LinearLayout>